<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">


    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:layout_marginBottom="10sp"
        android:layout_alignTop="@id/iv_avatar"
        android:layout_alignBottom="@id/iv_avatar"
        android:text="Ahmed"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_postImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/iv_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10sp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_postBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_postImage"
        android:layout_alignTop="@id/tv_username2"
        android:layout_marginEnd="10sp"
        android:layout_toRightOf="@id/tv_username2"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Instagram is the third most popular social media platform with over 1 billion monthly active users. If your business hasn’t added Instagram to your social media strategy yet, we’re not surprised you’re now considering it."
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_username2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_postImage"
        android:text="Ahmed"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="10sp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_creationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_postBody"
        android:text="10 hours ago"
        android:alpha="0.7"/>


</RelativeLayout>